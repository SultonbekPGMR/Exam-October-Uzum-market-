<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:foreground="?selectableItemBackground"
    android:layout_margin="4dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"

        android:orientation="vertical">


        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/def_product_1" />

        <TextView
            android:id="@+id/name"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:fontFamily="@font/font_space_grotesk"
            android:text="description of the image"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/price_monthly"
            android:layout_width="wrap_content"
            android:textColor="@color/black"

            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/item_vertical_price_bg"
            android:padding="3dp"
            android:text="4320 so'm/oyiga"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/oldPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
android:fontFamily="@font/font_space_2"
            android:text="@string/oldprice"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/newPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 000"
            android:layout_marginTop="5dp"
            android:layout_marginStart="8dp"
            android:textColor="@color/black"
            android:fontFamily="@font/font_space_grotesk"
            android:layout_marginBottom="8dp"
            android:textSize="17sp" />


    </LinearLayout>

    <ImageView
        android:id="@+id/btn_add_to_cart"
        android:layout_width="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_add_shopping_cart_24"
        android:layout_gravity="bottom|end"
        android:padding="5dp"
        android:background="@drawable/add_to_cart_bg" />

    <ImageView
        android:id="@+id/btn_favourite"
        android:layout_width="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_favorite_border_24"
        android:layout_gravity="top|end"
        android:padding="5dp"
        android:background="?selectableItemBackgroundBorderless" />


</androidx.cardview.widget.CardView>